<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/text_bus_line"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="@dimen/margin_normal"
            android:layout_marginLeft="@dimen/margin_normal"
            style="@style/TextBigTitle"/>

        <View
            style="@style/Divider"
            app:layout_constraintTop_toBottomOf="@id/text_bus_line"
            android:layout_marginTop="@dimen/margin_normal"
            android:layout_marginLeft="@dimen/margin_normal"
            android:layout_marginRight="@dimen/margin_normal"/>

        <TextView
            android:id="@+id/text_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?attr/colorAccent"
            app:layout_constraintTop_toBottomOf="@id/text_bus_line"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="@dimen/margin_double"
            android:layout_marginLeft="@dimen/margin_normal"
            android:paddingLeft="@dimen/margin_half"
            android:paddingRight="@dimen/margin_half"
            style="@style/TextBigTitle"/>

        <TextView
            android:id="@+id/text_time_tail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/time_tail"
            app:layout_constraintTop_toTopOf="@id/text_time"
            app:layout_constraintLeft_toRightOf="@+id/text_time"
            android:layout_marginLeft="@dimen/margin_half"
            style="@style/TextBigTitle"/>

        <Button
            android:id="@+id/btn_change_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/change_time"
            android:textColor="?attr/colorOnSurface"
            app:layout_constraintTop_toTopOf="@id/text_time"
            app:layout_constraintLeft_toRightOf="@id/text_time_tail"
            android:layout_marginLeft="@dimen/margin_double"/>

        <TextView
            android:id="@+id/text_arrive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?attr/colorAccent"
            app:layout_constraintTop_toBottomOf="@id/text_time"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="@dimen/margin_normal"
            android:layout_marginLeft="@dimen/margin_normal"
            android:paddingLeft="@dimen/margin_half"
            android:paddingRight="@dimen/margin_half"
            style="@style/TextBigTitle"/>

        <TextView
            android:id="@+id/text_arrive_tail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/time_arrive_tail"
            app:layout_constraintTop_toBottomOf="@id/text_time"
            app:layout_constraintLeft_toRightOf="@id/text_arrive"
            android:layout_marginTop="@dimen/margin_normal"
            style="@style/TextBigTitle"/>

        <View
            style="@style/Divider"
            app:layout_constraintTop_toBottomOf="@id/text_arrive_tail"
            android:layout_marginTop="@dimen/margin_normal"
            android:layout_marginLeft="@dimen/margin_normal"
            android:layout_marginRight="@dimen/margin_normal"/>

        <TextView
            android:id="@+id/text_schedule"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/schedule"
            app:layout_constraintTop_toBottomOf="@id/text_arrive"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="@dimen/margin_double"
            style="@style/TextBigTitle"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_schedule"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintTop_toBottomOf="@id/text_schedule"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="@dimen/margin_normal"
            android:layout_marginLeft="@dimen/margin_normal"
            android:layout_marginRight="@dimen/margin_normal"
            android:layout_marginBottom="@dimen/margin_normal"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>